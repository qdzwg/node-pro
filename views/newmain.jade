extends layout

block stylesheets
    link(rel="stylesheet", href="#{baseUrl}/stylesheets/swiper-3.4.1.min.css")    
    link(rel="stylesheet", href="#{baseUrl}/stylesheets/newtheme.css?#{vCode}")
block javascripts
    script(type='text/javascript', src='#{baseUrl}/javascripts/swiper-3.4.1.jquery.min.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/jquery.SuperSlide.2.1.3.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/touch-0.2.14.min.js')
    script(type='text/javascript', src='https://webapi.amap.com/maps?v=1.4.10&key=f842f480ae649d8cecb6bf0ede5f21a4')
    script(type='text/javascript', src='#{baseUrl}/javascripts/iconfont.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/allcomponents.js?#{vCode}')
block content
    include ./allcomponents/controller
    include ./allcomponents/common   
    if  pageBackFlag === "customBgImg"
        - var bg = 'background: url('+pageBackground+') 0% 0% / 100% 100% no-repeat;';
    else 
        - var bg = 'background-color:'+ pageBackground;   
    .index-box(style=bg)       
        if newtemplateData.length>0
            each item in newtemplateData
                .index-box-li(class=(item.hideBottom==false||!item.hideBottom)?'boxli-mb05':'')
                    +choiceComponent(item.category, item.data, merchantInfoId)
    if ifshowFoot&&footerData.list&&footerData.list.length>0
        +newfooter(footerData, module)
        
    .mask#mask
    .tips
        p
        a(href="javascript:;").queding 确定

        
