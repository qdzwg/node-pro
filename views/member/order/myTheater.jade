
extends ../../layout
block stylesheets
    link(rel="stylesheet", href="#{baseUrl}/stylesheets/swiper-3.4.1.min.css")
    link(rel='stylesheet', href='#{baseUrl}/stylesheets/order.css?#{vCode}')
    style.
        body {
          background:#7B7E7F;
        }
        .ticketWrap {
            border-radius: 8px;
            overflow: hidden;
            background-color: #fff;
            margin: .5rem .65rem;
            box-shadow: 0 0 0.25rem 0.01rem rgba(0, 0, 0, .1);
        }
        .qrcodeWrap {
            margin: 0 auto;
            text-align: center;
            background: #fff;
            padding: 1rem;
        }
        .qrcodeWrap canvas {
            width:50%;
            height:50%;
        }
        .orderName {
            color: #666;
            font-size: .65rem;
            margin-top: .25rem;
        }
        .zybAssistCheckNo {
            color: #666;
            font-size: .55rem;
            margin-top: .25rem;
        }
        .zybAssistCheckNo .orderCode {
            font-size:0.85rem;
            color: #19a0f0
        }
        .orderCode {
            color: #333;
        }
        .checkStatus {
            border-radius: 20px;
            display: inline-block;
            height: 1rem;
            line-height: 1rem;
            font-size: .55rem;
            padding: 0 .35rem;
            margin:.25rem auto 0.45rem;
        }

        .checkStatus0 {
            color: #6c0;
            background-color: #eefae4;
        }

        .checkStatus1 {
            color: #f30;
            background-color: #feebe5;
        }

        .checkStatus2 {
            color: #3198ff;
            background-color: #e9f6ff;
        }

        .checkStatus3 {
            color: #999;
            background-color: #f0f0f0;
        }
        .ticket-line {
            width: 96%;
            border-top: 1px solid #ddd;
            margin: 0 auto;
        }
        .order-list li {
            border-bottom: 0;
            padding: .45rem .75rem;
        }
        .ticketTitle {
            font-size: .75rem;
            color: #333;
        }
        .ticketCodeShowList {
 
        }

        /*Swiper原样式 */
        .swiper-button-next {max-width: 256px;max-height: 256px;background-image: url(data:image/svg+xml;utf8;base64,)}
        .swiper-button-prev {max-width: 256px;max-height: 256px;background-image: url(data:image/svg+xml;utf8;base64,)}


block javascripts
    script(type='text/javascript', src='#{baseUrl}/javascripts/swiper-3.4.1.jquery.min.js')
    script(src="#{baseUrl}/javascripts/jquery.qrcode.min.js", type='text/javascript')

block content
    include ../../common/index
    include ../../common/quickLink
    include ./myTheaterQr
    +flowBtn(userInfo,marketDisAccount,showWholeMarket)
    - var orderInfo = data[0].data,ticketsArray = data[1].data; 
    div(style="height:2rem")
    if !(ticketsArray instanceof Array)
        +QR(ticketsArray)
    else 
        if ticketsArray instanceof Array && ticketsArray.length === 1
            +QR(ticketsArray[0])
        else
            - var payedLength = 0
            .swiper-container.ticketCodeShowList
                .swiper-wrapper
                    each item,index in ticketsArray
                        - payedLength++
                        .swiper-slide
                            +QR(item)                        
                .swiper-pagination
                if payedLength > 1
                    .swiper-button-prev
                    .swiper-button-next
    .to-theater-detail
      a(href="/member/order/"+orderInfo.id+"?m_id="+merchantInfoId)  查看详情  

    script.
        $(function(){
            $('.qrcodeImg').each(function(){
                var checkNo = $(this).data('checkno').toString();
                var used = $(this).data('used') || 'F';
                var color =  '#000';
                $(this).qrcode({
                    text: checkNo,
                    foreground: color
                })
            })
            touch.on('#refreshQr','tap',function(){
                $.showLoading();
                $('.qrcodeImg').each(function(){
                    var checkNo = $(this).data('checkno').toString();
                    var used = $(this).data('used') || 'F';
                    var color = '#000';
                    $(this).empty().qrcode({
                        text: checkNo,
                        foreground: color
                    })
                    setTimeout(function () {
                        $.hideLoading();
                        Msg.open('二维码已刷新')
                    }, 300); 
                })
            })
            if ($(".ticketCodeShowList").length > 0) {
                var ticketCodeShowList = new Swiper('.ticketCodeShowList', {
                    paginationClickable: true,
                    autoHeight: true,
                    prevButton: '.swiper-button-prev',
                    nextButton: '.swiper-button-next'
                });
            }
        });

