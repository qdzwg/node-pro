extends layout
block stylesheets
    link(rel="stylesheet", href="#{baseUrl}/stylesheets/login.css?#{vCode}")
block javascripts
    script(type='text/javascript', src='#{baseUrl}/javascripts/validate/jquery.validate.min.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/validate/messages_zh.min.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/validate/additional-methods.js')
    script(type='text/javascript', src='#{baseUrl}/javascripts/login.js?#{vCode}')
block content
    .login-main.register-main
        form#submitForm
          .login-list
            .input-box.text
                input(type='tel',name='loginName' placeholder='请输入手机号码')
            .quick-login#showImgCode
              .input-box.code.clearfix
                .code-img.fr#reloadImageCode(data-type='reg',data-base=axiosUrl) 
                  img(src="", alt="")
                input.input-code(type='text', name='imgCode', placeholder='图片验证码',value=checkCode)              
            .quick-login
              .input-box.code.clearfix
                input.fr#getCodeBtn(type='button', value='获取验证码',data-type='reg')
                input.input-code(type='tel', name='checkCode', placeholder='请输入验证码',value=checkCode)              
            .input-box.text
                input#password(type='password',name='loginPass', placeholder='请输入6-20位字母、数字或符号密码')
            //p.form-explian 6-20位字母、数字或符号
            .input-box.text
              input(type='password',name="enterpassword", placeholder='请确认密码')
            .input-box.clearfix
              span#checkedBtn.check-btn
                input#check(type='checkbox', checked='checked', hidden)
                i.checked
                em 点击注册表示同意
              a.user-agreement(href='/register/protocol') 《用户协议》
            .input-box.input-button
              input#registerBtn(type='button',data-url=redir, value='立即注册')
    .mask#mask
        .tips
            p
            a(href="javascript:;").queding 确定